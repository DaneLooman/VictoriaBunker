<section id='sectors'>
	<h2>Combined Expertise</h2>
	<div id='sectors--icons'>
		<div class='icon--contain'>
			<img
				src='./energy.svg'
				alt='icon of electrical pole'
				class=''
				height='232'
				width='232'
			/>
			<p>Utility-Energy</p>
		</div>
		<div class='icon--contain'>
			<img
				src='./Transportation.svg'
				alt='icon of bus'
				class=''
				height='232'
				width='232'
			/>
			<p>Transportation</p>
		</div>
		<div class='icon--contain'>
			<img
				src='./private.svg'
				alt='icon of a house'
				class=''
				height='232'
				width='232'
			/>
			<p>Private</p>
		</div>
		<div class='icon--contain'>
			<img
				src='./municipal.svg'
				alt='icon of  school'
				class=''
				height='232'
				width='232'
			/>
			<p>Municipal</p>
		</div>
		<div class='icon--contain'>
			<img
				src='./telecom.svg'
				alt='icon of a cellphone tower'
				class=''
				height='232'
				width='232'
			/>
			<p>Telecom</p>
		</div>
	</div>
</section>

<style>
	#sectors {
		background-color: #194259;
		display: flex;
		flex-direction: column;
		width: 100%;
		align-items: center;
		padding: 80px 16px 56px 16px;
	}
	#sectors > h2 {
		color: #d9d9d9;
		font-family: Noto Serif;
		font-size: 56px;
		font-style: normal;
		font-weight: 400;
		line-height: 36px; /* 64.286% */
		letter-spacing: -0.84px;
		margin-top: 0px;
		margin-bottom: 56px;
	}
	#sectors--icons {
		display: flex;
		width: 100%;
		justify-content: space-around;
		max-width: 1920px;
	}
	.icon--contain {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.icon--contain > p {
		color: #d9d9d9;
		font-weight: 700;
		font-size: 2rem;
		font-family: Montserrat;
	}
	#mobile-sectors {
		display: none;
	}

	@media only screen and (max-width: 1300px) {
		#sectors {
			padding: 48px 16px;
		}
		#sectors > h2 {
			font-size: 2.4rem;
			margin-bottom: 40px;
		}
		#sectors--icons {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 16px;
			max-width: 500px;
		}
		.icon--contain > img {
			width: 200px;
			height: 200px;
		}
		.icon--contain > p {
			font-size: 1.4rem;
		}
		.icon--contain:nth-child(3) {
			grid-column: 1 / 3;
		}
	}

	@media only screen and (max-width: 500px) {
		.icon--contain > img {
			width: 140px;
			height: 140px;
		}
	}
</style>
