---
export interface Props {
	title: string;
	desc: string;
	href: string;
	image: string;
	tag: string;
	type: string;
}

const { title, desc, href, image, tag, type } = Astro.props;
---

<div class={`card ${type}`}>
	<h3>{title}</h3>
	<!-- <p class='card--tag'>{tag}</p> -->
	<a
		aria-label={`link to article ${title}`}
		class='card--image'
		href={href}
		style={`background-image: url("${image}?w=330&h=220"); background-position: center; background-repeat: no-repeat; background-size: cover;`}
	></a>
	<p class='card--desc'>{desc}</p>
	<a href={href} class='card--button' aria-label={`Read Article`}
		>Read Article</a
	>
</div>
<style>
	.card {
		padding: 48px 80px;
		display: flex;
		flex-direction: column;
		align-items: start;
		background-color: #d9d9d9;
		color: #fff;
		position: relative;
		transition: all 200ms ease-in;
	}
	.card > * {
		transition: all 200ms ease-in;
	}
	.card.\31 {
		background-color: #e9e9e9;
	}
	.card:hover {
		background-color: #fff;
	}
	.card:hover > h3 {
		color: #194259;
	}
	.card:hover > .card--image {
		filter: grayscale(0%);
	}
	.card--tag {
		position: absolute;
		top: 0px;
		right: 16px;
		background-color: #0063a7;
		padding: 4px;
		font-weight: 700;
		font-size: 1rem;
	}
	.card--image {
		width: 100%;
		height: 230px;
		filter: grayscale(100%);
	}
	.card > h3 {
		color: #000;
		font-family: Noto Serif;
		font-size: 32px;
		font-style: normal;
		font-weight: 400;
		line-height: 46.5px; /* 116.25% */
		letter-spacing: -0.6px;
		margin: 0px;
		margin-bottom: 24px;
	}

	.card--desc {
		color: #212121;
		font-weight: 400;
		line-height: 1.6rem;
		text-align: left;
	}
	.card--button {
		text-align: center;
		padding: 1em 2em;
		border: none;
		border-radius: 5px;
		font-weight: bold;
		letter-spacing: 2px;
		color: #ffffff;
		transition: all 1000ms;
		font-size: 1rem;
		position: relative;
		overflow: hidden;
		outline: 2px solid #194259;
		background-color: #194259;
		text-decoration: none;
	}
	.card--button:hover {
		color: #194259;
		transform: scale(1.1);
		outline: 2px solid #194259;
		box-shadow: 4px 5px 17px -4px #194259;
		cursor: pointer;
	}
	.card--button::before {
		content: '';
		position: absolute;
		left: -50px;
		top: 0;
		width: 0;
		height: 100%;
		background-color: #fff;
		transform: skewX(45deg);
		z-index: -1;
		transition: width 1000ms;
	}
	.card--button:hover::before {
		width: 250%;
	}

	@media only screen and (max-width: 1200px) {
		.card {
			margin: 0px;
			padding: 32px 24px;
		}
	}
</style>
