	}
	.social {
		display: flex;
		max-width: fit-content;
		margin: 16px;
	}
	.social > a {
		transition: color 0.2s ease;
	}

	footer > a:hover,
	.social > a:hover,
	footer > a:hover > [astro-icon],
	.social > a:hover > [astro-icon] {
		color: #004575;
	}

	@media only screen and (max-width: 700px) {
		footer > a {
			font-size: 1rem;
			margin-bottom: 24px;
		}
	}
</style>
